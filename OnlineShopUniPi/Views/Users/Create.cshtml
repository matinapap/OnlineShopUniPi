@model OnlineShopUniPi.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4 text-center">Δημιουργία Χρήστη</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="CreatedByAdmin">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="row g-3">
                        <div class="col-md-6 form-floating">
                            <input asp-for="FirstName" class="form-control" placeholder="Όνομα" />
                            <label asp-for="FirstName"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating">
                            <input asp-for="LastName" class="form-control" placeholder="Επώνυμο" />
                            <label asp-for="LastName"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating">
                            <input asp-for="Username" class="form-control" placeholder="Username" />
                            <label asp-for="Username"></label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Τηλέφωνο" />
                            <label asp-for="PhoneNumber"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating">
                            <input asp-for="PasswordHash" class="form-control" placeholder="Κωδικός" type="password" />
                            <label asp-for="PasswordHash"></label>
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>                        
                        <div class="col-md-6 form-floating">
                            <input asp-for="Address" class="form-control" placeholder="Διεύθυνση" />
                            <label asp-for="Address"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating">
                            <input name="ConfirmPassword" id="ConfirmPassword" class="form-control" type="password" placeholder="Επιβεβαίωση Κωδικού" />
                            <label for="ConfirmPassword">Confirm Password</label>
                            @if (ViewData.ModelState["ConfirmPassword"] != null)
                            {
                                <span class="text-danger">@ViewData.ModelState["ConfirmPassword"].Errors.FirstOrDefault()?.ErrorMessage</span>
                            }
                        </div>
                        <div class="col-md-3 form-floating">
                            <input asp-for="City" class="form-control" placeholder="Πόλη" />
                            <label asp-for="City"></label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 form-floating">
                            <input asp-for="Country" class="form-control" placeholder="Χώρα" />
                            <label asp-for="Country"></label>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating">
                            <select asp-for="Role" class="form-select" asp-items="@(new SelectList(new[] { "User", "Admin" }))">
                                <option value="">-- Επιλέξτε Ρόλο --</option>
                            </select>
                            <label asp-for="Role"></label>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4 text-end">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-person-plus"></i> Δημιουργία
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">← Πίσω στη Λίστα</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

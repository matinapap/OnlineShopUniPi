@model OnlineShopUniPi.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-body p-5">
            <div class="row align-items-center mb-4">
                @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                {
                    <img src="@Url.Content("~/images" + Model.ProfilePictureUrl)"
                         class="rounded-circle img-fluid shadow"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         alt="Profile Picture" />
                }
                else
                {
                    <img src="@Url.Content("~/images/resources/user_profile.png")"
                         class="rounded-circle img-fluid shadow"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         alt="Profile Picture" />
                }

                <div class="col-md-9">
                    <h2 class="fw-bold">@Model.FirstName @Model.LastName</h2>
                    <p class="text-muted">@Model.Username</p>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">City</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4">Country</dt>
                        <dd class="col-sm-8">@Model.Country</dd>

                        <dt class="col-sm-4">Registered</dt>
                        <dd class="col-sm-8">@Model.RegistrationDate?.ToString("dd MMM yyyy")</dd>
                    </dl>
                </div>
            </div>


            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-outline-primary">
                    <i class="bi bi-pencil"></i> Edit Profile
                </a>
                <a asp-controller="Users" asp-action="Logout" class="btn btn-outline-danger">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>
    </div>
</div>

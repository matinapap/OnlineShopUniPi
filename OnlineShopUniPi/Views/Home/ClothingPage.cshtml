@{
    ViewData["Title"] = "Clothess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="el">
<body>

    <div class="section">
        <h2>Κατηγορίες</h2>
        <div class="categories">
            <div class="category-tab active">Όλα</div>
            <div class="category-tab">Ανδρικά</div>
            <div class="category-tab">Γυναικεία</div>
            <div class="category-tab">Παιδικά</div>
            <div class="category-tab">Παντόφλες</div>
            <div class="category-tab">Αξεσουάρ</div>
            <div class="category-tab">Εποχικά</div>
        </div>
    </div>

    <div class="section">
        <h2>Προτεινόμενα Ρούχα</h2>
        <div class="products">
            <div class="product-card">
                <img src="https://via.placeholder.com/200x180?text=Δερμάτινο+Μπουφάν" alt="Δερμάτινο Μπουφάν">
                <h3>Δερμάτινο Μπουφάν</h3>
                <div class="price">€30.00</div>
                <button class="cart-btn">Προσθήκη</button>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/200x180?text=Καλοκαιρινό+Φόρεμα" alt="Καλοκαιρινό Φόρεμα">
                <h3>Καλοκαιρινό Φόρεμα</h3>
                <div class="price">€24.50</div>
                <button class="cart-btn">Προσθήκη</button>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/200x180?text=Αθλητικά+Παπούτσια" alt="Αθλητικά Παπούτσια">
                <h3>Αθλητικά Παπούτσια</h3>
                <div class="price">€55.00</div>
                <button class="cart-btn">Προσθήκη</button>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/200x180?text=Τζιν+Jeans" alt="Τζιν Jeans">
                <h3>Τζιν Jeans</h3>
                <div class="price">€28.00</div>
                <button class="cart-btn">Προσθήκη</button>
            </div>
        </div>
    </div>

    <div class="section">
        <h2>Νέα Άφιξη</h2>
        <div class="products-grid">
            <div class="grid-item">
                <img src="https://via.placeholder.com/150x150?text=Μπλούζα" alt="Μπλούζα">
                <h4>Μπλούζα</h4>
                <div class="price">€15.00</div>
                <button class="cart-btn">Προσθήκη</button>
            </div>
            <div class="grid-item">
                <img src="https://via.placeholder.com/150x150?text=Σορτς" alt="Σορτς">
                <h4>Σορτς</h4>
                <div class="price">€12.00</div>
                <button class="cart-btn">Προσθήκη</button>
            </div>
            <div class="grid-item">
                <img src="https://via.placeholder.com/150x150?text=Παπούτσια" alt="Παπούτσια">
                <h4>Παπούτσια</h4>
                <div class="price">€45.00</div>
                <button class="cart-btn">Προσθήκη</button>
            </div>
            <div class="grid-item">
                <img src="https://via.placeholder.com/150x150?text=Γάντια" alt="Γάντια">
                <h4>Γάντια</h4>
                <div class="price">€8.50</div>
                <button class="cart-btn">Προσθήκη</button>
            </div>
            <div class="grid-item">
                <img src="https://via.placeholder.com/150x150?text=Καπέλο" alt="Καπέλο">
                <h4>Καπέλο</h4>
                <div class="price">€10.00</div>
                <button class="cart-btn">Προσθήκη</button>
            </div>
        </div>
    </div>

    <script>
        // Απλή λειτουργικότητα για τα tabs
        document.querySelectorAll('.category-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelector('.category-tab.active').classList.remove('active');
                this.classList.add('active');
                // Εδώ θα μπορούσατε να προσθέσετε κώδικα για φιλτράρισμα προϊόντων
            });
        });

        // Λειτουργικότητα για το κουμπί προσθήκης στο καλάθι
        document.querySelectorAll('.cart-btn').forEach(button => {
            button.addEventListener('click', function() {
                alert('Το προϊόν προστέθηκε στο καλάθι σας!');
            });
        });
    </script>
</body>
</html>
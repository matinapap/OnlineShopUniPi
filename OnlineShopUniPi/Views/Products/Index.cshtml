@model IEnumerable<OnlineShopUniPi.Models.Product>

@{
    ViewData["Title"] = "Προϊόντα";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var searchedId = Context.Request.Query["productId"].ToString();
}

<div class="container mt-4">
    <h2 class="mb-4">Λίστα Προϊόντων</h2>

    <!-- Search Form -->
    <form asp-action="Index" method="get" class="mb-3 row g-2 align-items-center">
        <div class="col-auto">
            <input type="number" name="productId" class="form-control" placeholder="Αναζήτηση με Product ID" value="@searchedId" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Αναζήτηση</button>
        </div>
    </form>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().ProductId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Title)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Category)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Condition)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>
                    <th>Χρήστης</th>
                    <th>Ενέργειες</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Category</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Condition</td>
                        <td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                        <td>@item.User?.UserId</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info me-1">Προβολή</a>
                            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning me-1">Επεξεργασία</a>
                            <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Διαγραφή</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            No products were found matching the specified criteria.
        </div>
    }
</div>

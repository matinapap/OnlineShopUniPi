@model OnlineShopUniPi.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_Layout.cshtml";

    var gendercategoryList = new List<SelectListItem>
    {
        new SelectListItem { Text = "Male", Value = "Men" },
        new SelectListItem { Text = "Female", Value = "Women" }
    };
}

<h1 class="mb-4 text-black text-center">Δημιουργία Προϊόντος</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow rounded-4 border-0">
            <div class="card-body p-4">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-bold"></label>
                        <input asp-for="Title" class="form-control rounded-pill" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Description" class="form-control rounded-3" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label fw-bold"></label>
                        <select asp-for="Gender" class="form-select rounded-pill" id="GenderSelect">
                            <option value="">-- Επιλέξτε φύλο --</option>
                            @foreach (var g in gendercategoryList)
                            {
                                <option value="@g.Value">@g.Text</option>
                            }
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label fw-bold"></label>
                        <select asp-for="Category" class="form-select rounded-pill" id="CategorySelect" disabled>
                            <option value="">-- Επιλέξτε κατηγορία --</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label fw-bold"></label>
                        <input asp-for="Quantity" class="form-control rounded-pill" type="number" min="1" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Size" class="form-label fw-bold"></label>
                        <select asp-for="Size" class="form-select rounded-pill">
                            <option value="">-- Επιλέξτε μέγεθος --</option>
                            <option value="Small">Small</option>
                            <option value="Medium">Medium</option>
                            <option value="Large">Large</option>
                        </select>
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label fw-bold"></label>
                        <input asp-for="Price" class="form-control rounded-pill" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Condition" class="form-label fw-bold"></label>
                        <select asp-for="Condition" class="form-select rounded-pill">
                            <option value="">-- Επιλέξτε κατάσταση --</option>
                            <option value="New">New</option>
                            <option value="Almost new">Almost new</option>
                            <option value="Used">Used</option>
                        </select>
                        <span asp-validation-for="Condition" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="MainImage" class="form-label fw-bold">Κύρια Εικόνα</label>
                        <input type="file" name="MainImage" id="MainImage" class="form-control rounded-pill" />
                        <small class="form-text text-muted">Η εικόνα αυτή θα εμφανίζεται πρώτη.</small>
                    </div>

                    <div class="mb-3">
                        <label for="AdditionalImages" class="form-label fw-bold">Δευτερεύουσες Εικόνες</label>
                        <input type="file" name="AdditionalImages" id="AdditionalImages" class="form-control rounded-pill" multiple />
                        <small class="form-text text-muted">Μπορείτε να επιλέξετε πολλαπλές δευτερεύουσες εικόνες.</small>
                    </div>


                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-primary px-4 rounded-pill">
                            <i class="bi bi-plus-circle me-1"></i> Δημιουργία
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const maleClothes = [
            "Shirts",
            "T-shirts / Tops",
            "Sweaters and Hoodies",
            "Jackets / Coats",
            "Jeans and Pants",
            "Other"
        ];

        const femaleClothes = [
            "Dresses and bodysuits",
            "T-shirts / Tops",
            "Jackets / Coats",
            "Beachwear / Swimwear",
            "Shirts and blouses",
            "Pants / Trousers",
            "Sweaters / Jumpers",
            "Jeans",
            "Hoodies / Sweatshirts",
            "Skirts and shorts",
            "Other"
        ];

        const genderSelect = document.getElementById("GenderSelect");
        const categorySelect = document.getElementById("CategorySelect");

        genderSelect.addEventListener("change", function () {
            const gender = this.value;
            categorySelect.innerHTML = '<option value="">-- Επιλέξτε κατηγορία --</option>';

            let clothesList = [];

            if (gender === "Men") {
                clothesList = maleClothes;
            } else if (gender === "Women") {
                clothesList = femaleClothes;
            }

            if (clothesList.length > 0) {
                clothesList.forEach(cat => {
                    const option = document.createElement("option");
                    option.value = cat;
                    option.text = cat;
                    categorySelect.appendChild(option);
                });
                categorySelect.disabled = false;
            } else {
                categorySelect.disabled = true;
            }
        });
    </script>
}

@model IEnumerable<OnlineShopUniPi.Models.Product>

@{
    ViewData["Title"] = "Τα Προϊόντα Μου";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Τα Προϊόντα Μου</h1>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">➕ Προσθήκη Προϊόντος</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Δεν έχετε προϊόντα προς εμφάνιση.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="https://via.placeholder.com/400x250?text=@item.Title" class="card-img-top" alt="@item.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text"><strong>Κατηγορία:</strong> @item.Category</p>
                        <p class="card-text"><strong>Τιμή:</strong> €@item.Price</p>
                        <p class="card-text"><strong>Κατάσταση:</strong> @item.Condition</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-primary btn-sm">Λεπτομέρειες</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Διαγραφή</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

